{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "strict": true
  },
  "include": ["./src/**/*", "./index.ts"],
  "exclude": ["node_modules"]
}
